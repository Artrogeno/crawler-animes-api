{
  "env": {
    "browser": false,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "acmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": ["import", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "prettier/prettier": "error",
    "import/prefer-default-export": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "global-require": "off",
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "camelcase": "off"
  }
}
